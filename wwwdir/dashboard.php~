	  &nbsp;&nbsp;|&nbsp;&nbsp;
  	<a href="<?= 'http://' . $_SERVER['SERVER_ADDR'] . ':57127/playlist.php' ?>" target="_blank">[ Get channels ONLINE RAW playlist ]</a>
	&nbsp;&nbsp;|&nbsp;&nbsp;
	<a href="#" onclick="showOnlyON();">[ Show Active Channels ]</a>
	&nbsp;&nbsp;|&nbsp;&nbsp;
	<a href="#" onclick="showOnlyOFF();">[  Show Inactive Channels ]</a>
