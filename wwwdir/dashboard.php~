<?php
   include '../includes/functions.php';
   $server = "http://{$_SERVER['HTTP_HOST']}{$_SERVER['PHP_SELF']}";

   $path_server = str_replace ('dashboard.php' , 'api.php' , $server);
   $rr = json_decode(file_get_contents('http://127.0.0.1:57127/index.php'), true);
   $ids = [];
   $monitor =json_decode(file_get_contents('/home/wvtohls/monitor.db'), True);
   foreach ($rr['channels'] as $key => $r) 
      $ids[] = $key;

?>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Mycanal Streamer</title>
